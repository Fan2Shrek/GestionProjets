{% extends 'base.html.twig' %}
{% block title %} Liste des clients {% endblock %}

{% block body %}
    <div class="col-lg-9 col-md-9 col-sm-12">
    <h3 class="nouv">&emsp;Clients</h3>

        <!-- debut carrÃ© -->
    <div class="col-lg-12 col-md-12 col-sm-12">
        
        <div class="fondTableau">

        <div class="table-responsive">

            <table class="table table-bordered" id="tabClient">
                <tr class="trTableau">
                    <th>NOM</th>
                    <th>CODE</th>
                    <th>NOTES</th>
                    <th>MODIFIER</th>
                </tr>
                {% if customers is defined %}
                    {% for customer in customers %}
                        <tr>
                            <td>{{ customer.name }}</td>
                            <td>{{ customer.code }}</td>
                            <td>{{ customer.notes }}</td>
                            <td>
                                <a class='aTabl' href='{{ path('EditCustomer', {'id' : customer.id })}}'>Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr><td colspan=4><h2 class='noResult'>Pas de client</h2></td></tr>
                {% endif %}
            </table>

        </div>

            <div class="btnAdd2">
                <a href='{{ path('NewCustomer') }}' class="btnOrange">+ Ajouter</a>&emsp;
            </div>
            <br>
        </div>
    </div>

</div>
{% endblock %}